   "source": [
    "import random\n",
    "import ipywidgets as widgets\n",
    "from IPython.display import display, clear_output\n",
    "\n",
    "secret_number = random.randint(1, 100)\n",
    "attempts = 0\n",
    "guess_input = widgets.BoundedIntText(\n",
    "    value=0,\n",
    "    min=1,\n",
    "    max=100,\n",
    "    description='Your guess:',\n",
    "    disabled=False\n",
    ")\n",
    "output = widgets.Output()\n",
    "button = widgets.Button(description=\"Guess!\")\n",
    "\n",
    "def on_button_clicked(b):\n",
    "    global attempts\n",
    "    guess = guess_input.value\n",
    "    attempts += 1\n",
    "    with output:\n",
    "        clear_output()\n",
    "        if guess < secret_number:\n",
    "            print(f\"{guess} try again. Try again!\")\n",
    "        elif guess > secret_number:\n",
    "            print(f\"{guess} try again. Try again!\")\n",
    "        else:\n",
    "            print(f\"ðŸŽ‰ Congratulations! You guessed it in {attempts} attempts.\")\n",
    "            button.disabled = True\n",
    "            guess_input.disabled = True\n",
    "button.on_click(on_button_clicked)\n",
    "\n",
    "display(widgets.VBox([guess_input, button, output]))"
   ]
  }
 ],
